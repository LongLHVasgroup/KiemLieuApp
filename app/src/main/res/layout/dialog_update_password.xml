<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/title_update_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/size_text_reading_nfc"
        android:text="Tài khoản của bạn đã được đặt lại mật khẩu"/>
        <TextView
            android:id="@+id/tv_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/title_update_pass"
            android:text="Mật khẩu mới*"
            android:textColor="?myTextViewColor" />

        <EditText
            android:id="@+id/txt_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_new_pass"
            android:background="@drawable/buttonshape3"
            android:selectAllOnFocus="true"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_repeat_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_new_pass"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Nhập lại mật khẩu mới*"
            android:textColor="?myTextViewColor" />

        <EditText
            android:id="@+id/txt_repeat__pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_repeat_pass"
            android:background="@drawable/buttonshape3"
            android:selectAllOnFocus="true"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:padding="10dp" />
    <CheckBox
        android:id="@+id/cb_show_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_repeat__pass"
        android:text="Hiện mật khẩu"/>


        <Button
            android:id="@+id/btnSaveChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_repeat__pass"
            android:layout_marginTop="70dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:enabled="false"
            android:background="@drawable/buttonshape9"
            android:text="Hoàn thành" />

</RelativeLayout>